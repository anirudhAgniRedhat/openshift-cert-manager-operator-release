{
	"_comment": "Refer https://docs.renovatebot.com/configuration-options/ more details",
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
	],
	"tekton": {
		"assigneesFromCodeOwners": true,
		"automerge": true,
		"automergeComment": "PR configured to be auto-merged by renovate-bot",
		"automergeStrategy": "rebase",
		"automergeType": "pr-comment",
		"enabled": true,
		"ignoreTests": false,
		"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
		"platformAutomerge": true
	}
}
